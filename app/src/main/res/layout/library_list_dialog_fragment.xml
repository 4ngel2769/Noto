<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll"
    style="@style/BaseDialogFragment">

    <include layout="@layout/base_dialog_fragment" />

    <TextView
        android:id="@+id/tv_change_theme"
        style="@style/DialogItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_item_shape"
        android:text="@string/change_theme"
        app:drawableStartCompat="@drawable/ic_round_theme_24" />

    <TextView
        android:id="@+id/tv_settings"
        style="@style/DialogItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_item_shape"
        android:text="@string/settings"
        app:drawableStartCompat="@drawable/ic_round_settings_24" />

</LinearLayout>