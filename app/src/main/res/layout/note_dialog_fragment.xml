<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll"
    style="@style/BaseDialogFragment">

    <include layout="@layout/base_dialog_fragment" />

    <TextView
        android:id="@+id/tv_remind_me"
        style="@style/DialogItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ripple"
        android:text="@string/add_reminder"
        app:drawableStartCompat="@drawable/bell_plus_outline" />

    <TextView
        android:id="@+id/tv_star_note"
        style="@style/DialogItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ripple"
        android:text="@string/star_note"
        app:drawableStartCompat="@drawable/ic_star_unchecked_24dp" />

    <TextView
        android:id="@+id/tv_archive_note"
        style="@style/DialogItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ripple"
        android:text="@string/archive_note"
        app:drawableStartCompat="@drawable/archive_arrow_down_outline" />

    <TextView
        android:id="@+id/tv_duplicate_note"
        style="@style/DialogItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ripple"
        android:text="@string/duplicate_note"
        app:drawableStartCompat="@drawable/ic_baseline_control_point_duplicate_24" />

    <TextView
        android:id="@+id/tv_copy_to_clipboard"
        style="@style/DialogItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ripple"
        android:text="@string/copy_to_clipboard"
        app:drawableStartCompat="@drawable/content_copy" />

    <TextView
        android:id="@+id/tv_share_note"
        style="@style/DialogItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ripple"
        android:text="@string/share_note"
        app:drawableStartCompat="@drawable/ic_outline_share_24" />


    <TextView
        android:id="@+id/tv_delete_note"
        style="@style/DialogItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ripple"
        android:text="@string/delete_note"
        app:drawableStartCompat="@drawable/ic_delete_24px" />

</LinearLayout>