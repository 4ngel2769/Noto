<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/BaseDialogFragment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/base_dialog_fragment" />

        <TextView
            android:id="@+id/tv_edit_library"
            style="@style/DialogItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/dialog_item_shape"
            android:text="@string/edit_library"
            app:drawableStartCompat="@drawable/ic_round_edit_24" />

        <TextView
            android:id="@+id/tv_archive_library"
            style="@style/DialogItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/dialog_item_shape"
            android:text="@string/archive_library"
            app:drawableStartCompat="@drawable/ic_round_archive_24" />

        <TextView
            android:id="@+id/tv_pin_library"
            style="@style/DialogItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/dialog_item_shape"
            android:text="@string/pin_library"
            app:drawableStartCompat="@drawable/ic_round_pin_24" />

        <TextView
            android:id="@+id/tv_new_note_shortcut"
            style="@style/DialogItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/dialog_item_shape"
            android:text="@string/add_new_note_shortcut"
            app:drawableStartCompat="@drawable/ic_round_add_to_home_screen_24" />

        <TextView
            android:id="@+id/tv_export_library"
            style="@style/DialogItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/dialog_item_shape"
            android:text="@string/export_library"
            app:drawableStartCompat="@drawable/ic_round_folder_upload_24" />

        <TextView
            android:id="@+id/tv_delete_library"
            style="@style/DialogItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/dialog_item_shape"
            android:text="@string/delete_library"
            app:drawableStartCompat="@drawable/ic_round_delete_sweep_24" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>