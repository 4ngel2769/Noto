<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/BaseDialogFragment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/spacing_normal">

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/base_dialog_fragment" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_folder_title"
            style="@style/DialogSectionItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/spacing_normal"
            android:text="@string/folder_title" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til"
            style="@style/TextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/TextInputLayout">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et"
                style="@style/TextInputEditText"
                android:imeOptions="actionDone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/folder_title"
                android:inputType="text|textAutoCorrect|textCapSentences" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_folder_color"
            style="@style/DialogSectionItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/spacing_normal"
            android:text="@string/folder_color" />

        <com.airbnb.epoxy.EpoxyRecyclerView
            android:id="@+id/rv"
            android:background="@drawable/generic_shape"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:listitem="@layout/noto_color_item" />

        <LinearLayout
            android:id="@+id/ll_folder_layout"
            android:background="@drawable/header_item_shape"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_folder_layout"
                style="@style/DialogSectionItem"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:paddingVertical="@dimen/spacing_normal"
                android:text="@string/folder_layout" />

            <ImageView
                android:id="@+id/iv_folder_layout"
                android:src="@drawable/ic_round_arrow_up_24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/show" />

        </LinearLayout>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tl_folder_layout"
            style="@style/TabLayout"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.tabs.TabItem
                android:text="@string/list"
                android:icon="@drawable/ic_round_view_agenda_24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.google.android.material.tabs.TabItem
                android:text="@string/grid"
                android:icon="@drawable/ic_round_view_grid_24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </com.google.android.material.tabs.TabLayout>

        <LinearLayout
            android:id="@+id/ll_parent_folder"
            android:orientation="horizontal"
            android:background="@drawable/header_item_shape"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_parent_folder"
                style="@style/DialogSectionItem"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingVertical="@dimen/spacing_normal"
                android:text="@string/parent_folder" />

            <ImageView
                android:id="@+id/iv_parent_folder"
                android:src="@drawable/ic_round_arrow_up_24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/show" />

        </LinearLayout>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_parent_folder_option"
            style="@style/FolderTitleTextView"
            android:visibility="gone"
            android:background="@drawable/generic_shape"
            android:drawablePadding="@dimen/spacing_normal"
            android:padding="@dimen/spacing_normal"
            android:drawableStart="@drawable/ic_round_no_parent_24"
            android:contentDescription="@string/no_parent"
            android:text="@string/no_parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/ll_new_note_cursor_position"
            android:orientation="horizontal"
            android:background="@drawable/header_item_shape"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_new_note_cursor_position"
                style="@style/DialogSectionItem"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingVertical="@dimen/spacing_normal"
                android:text="@string/new_note_cursor_position" />

            <ImageView
                android:id="@+id/iv_new_note_cursor_position"
                android:src="@drawable/ic_round_arrow_up_24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/show" />

        </LinearLayout>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tl_new_note_cursor_position"
            style="@style/TabLayout"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.tabs.TabItem
                android:text="@string/body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.google.android.material.tabs.TabItem
                android:text="@string/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </com.google.android.material.tabs.TabLayout>


        <LinearLayout
            android:id="@+id/ll_note_preview_size"
            android:orientation="horizontal"
            android:background="@drawable/header_item_shape"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_note_preview_size"
                style="@style/DialogSectionItem"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:paddingVertical="@dimen/spacing_normal"
                android:text="@string/note_preview_size" />

            <ImageView
                android:id="@+id/iv_note_preview_size"
                android:src="@drawable/ic_round_arrow_up_24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/show" />
        </LinearLayout>

        <com.google.android.material.slider.Slider
            android:id="@+id/s_note_preview_size"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:valueFrom="0"
            android:valueTo="30"
            android:value="15"
            android:stepSize="1"
            android:contentDescription="@string/note_preview_size"
            app:haloColor="?attr/notoSurfaceColor"
            app:labelStyle="@style/SliderLabel"
            app:thumbColor="?attr/notoPrimaryColor"
            app:thumbRadius="12dp"
            app:thumbStrokeColor="?attr/notoPrimaryColor"
            app:thumbStrokeWidth="0dp"
            app:tickColorActive="?attr/notoBackgroundColor"
            app:tickColorInactive="?attr/notoPrimaryColor"
            app:trackColorActive="?attr/notoPrimaryColor"
            app:trackColorInactive="?attr/notoSurfaceColor"
            app:trackHeight="@dimen/spacing_normal" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/sw_show_note_creation_date"
            style="@style/DialogSectionItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/spacing_normal"
            android:text="@string/show_note_creation_date"
            app:thumbTint="?attr/notoPrimaryColor"
            app:trackTint="?attr/notoSurfaceColor" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_create"
            style="@style/MaterialButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/spacing_normal"
            android:padding="@dimen/spacing_normal"
            android:text="@string/create_folder" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>