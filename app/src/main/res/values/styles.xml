<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:statusBarColor">@color/colorSurface</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:navigationBarColor">@color/colorBackground</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="android:colorControlActivated">@color/colorPrimary</item>
        <item name="android:colorControlHighlight">@color/colorPrimary</item>
        <item name="android:colorControlNormal">@color/colorPrimary</item>
        <item name="android:textColorHighlight">@color/colorOnPrimary</item>
        <item name="android:textColorHint">@color/colorOnPrimary</item>
        <item name="hintTextColor">@color/colorOnPrimary</item>
    </style>

    <style name="PopupMenu.Overflow" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:backgroundTint">@color/colorBackground</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:tint">@color/colorPrimary</item>
    </style>

    <!-- Collapsing Toolbar -->
    <style name="Style.CollapsingToolbar" parent="TextAppearance.Design.CollapsingToolbar.Expanded">
        <item name="contentScrim">@color/colorSurface</item>
        <item name="layout_scrollFlags">scroll|snap|exitUntilCollapsed</item>
        <item name="expandedTitleTextAppearance">@style/CollapsingToolbar.ExpandedTitle</item>
        <item name="collapsedTitleTextAppearance">@style/CollapsingToolbar.CollapsedTitle</item>
    </style>

    <style name="CollapsingToolbar.ExpandedTitle" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">44sp</item>
        <item name="android:textColor">@color/colorSecondary</item>
    </style>

    <style name="CollapsingToolbar.CollapsedTitle" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorSecondary</item>
    </style>

    <style name="Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <!--        <item name="titleTextColor">@color/colorSecondary</item>-->
        <!--        <item name="android:backgroundTint">@color/colorSurface</item>-->
        <item name="popupTheme">@style/PopupMenu.Overflow</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/colorBackground</item>
    </style>

    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/colorBackground</item>
        <item name="boxStrokeColor">@color/colorPrimary</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/spacing_small</item>
        <item name="boxCornerRadiusBottomStart">@dimen/spacing_small</item>
        <item name="boxCornerRadiusTopEnd">@dimen/spacing_small</item>
        <item name="boxCornerRadiusTopStart">@dimen/spacing_small</item>
        <item name="errorEnabled">true</item>
        <item name="hintEnabled">true</item>
        <item name="hintAnimationEnabled">true</item>
        <item name="counterTextColor">@color/colorOnPrimary</item>
        <item name="hintTextColor">@color/colorOnPrimary</item>
    </style>

    <style name="TextInputEditText">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:singleLine">true</item>
        <item name="android:cursorVisible">true</item>
    </style>

    <style name="MaterialButton" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorBackground</item>
        <item name="android:textSize">16sp</item>
        <item name="cornerRadius">@dimen/spacing_small</item>
    </style>

    <style name="MaterialButtonSecondary" parent="MaterialButton">
        <item name="android:backgroundTint">@color/colorSurface</item>
        <item name="android:textColor">@color/colorSecondary</item>
    </style>

    <style name="HorizontalScrollView">
        <item name="android:background">@drawable/shape_dialog_rg</item>
        <item name="android:padding">@dimen/spacing_extra_small</item>
        <item name="android:scrollbars">none</item>
    </style>

    <style name="FAB" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="tint">@color/colorBackground</item>
    </style>

    <style name="TextView.LibraryTitle" parent="Widget.MaterialComponents.TextView">
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextView.LibraryNotoCount" parent="Widget.MaterialComponents.TextView">
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextInputLayout.NotoTitle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxBackgroundMode">none</item>
        <item name="hintEnabled">true</item>
        <item name="hintAnimationEnabled">true</item>
    </style>

    <style name="EditText.NotoTitle" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorSecondary</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColorHint">@color/colorOnSecondary</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="EditText.NotoBody" parent="Widget.AppCompat.EditText">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="android:lineSpacingMultiplier">1.5</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

    <style name="TextView.NotoTitle" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorSecondary</item>
    </style>

    <style name="TextView.NotoBody" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:textColor">@color/colorOnSecondary</item>
    </style>

</resources>
