<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
        <item name="android:colorPrimary">@color/colorOnPrimary_900</item>
        <item name="android:navigationBarColor">@color/colorPrimary</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="android:colorControlActivated">@color/colorOnPrimary_900</item>
        <item name="android:colorControlHighlight">@color/colorOnPrimary_600</item>
        <item name="android:colorControlNormal">@color/colorOnPrimary_900</item>
        <item name="android:textColorHighlight">@color/colorPrimaryGray</item>
    </style>

    <style name="Style.BottomNav.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:backgroundTint">@color/colorOnPrimary_900</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Theme.OverFlowMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:tint">@color/colorOnPrimary_900</item>
        <item name="android:textColor">@color/colorOnPrimary_900</item>
    </style>

    <!-- Collapsing Toolbar -->
    <style name="Style.CollapsingToolbar" parent="TextAppearance.Design.CollapsingToolbar.Expanded">
        <item name="android:background">@color/colorPrimary</item>
        <item name="contentScrim">@color/colorPrimary</item>
        <item name="expandedTitleTextAppearance">@style/TextAppearance.CollapsingToolbar.Expanded.Title</item>
        <item name="collapsedTitleTextAppearance">@style/TextAppearance.CollapsingToolbar.Collapsed.Title</item>
        <item name="layout_scrollFlags">scroll|snap|exitUntilCollapsed</item>
        <item name="collapsedTitleGravity">start</item>
        <item name="expandedTitleGravity">start</item>
    </style>

    <!-- Collapse Toolbar Title -->
    <style name="TextAppearance.CollapsingToolbar.Expanded.Title" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">48sp</item>
        <item name="android:textColor">@color/colorOnPrimary_900</item>
    </style>

    <style name="TextAppearance.CollapsingToolbar.Collapsed.Title" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">@dimen/ctb_col_title_dimen</item>
        <item name="android:textColor">@color/colorOnPrimary_900</item>
    </style>

    <style name="Style.NotoItem.TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/colorOnPrimary_800</item>
        <item name="android:textSize">@dimen/notebook_item_tv_dimen</item>
        <item name="android:singleLine">true</item>
    </style>

    <!-- Note Item Title -->
    <style name="Style.NoteItem.Title" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/colorOnPrimary_800</item>
        <item name="android:textSize">@dimen/note_item_title_dimen</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:maxLines">3</item>
    </style>

    <!-- Note Item Body -->
    <style name="Style.NoteItem.Body" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/colorOnPrimary_600</item>
        <item name="android:textSize">@dimen/note_item_body_dimen</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:maxLines">5</item>
    </style>

    <style name="Style.NoteFragment.Title" parent="Widget.AppCompat.EditText">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:maxLength">64</item>
        <item name="android:gravity">top|start</item>
        <item name="android:textColor">@color/colorOnPrimary_800</item>
        <item name="android:textSize">@dimen/note_fragment_title_dimen</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:maxLines">3</item>
    </style>

    <style name="Style.NoteFragment.Body" parent="Widget.AppCompat.EditText">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:gravity">top|start</item>
        <item name="android:singleLine">false</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/colorOnPrimary_600</item>
        <item name="android:textSize">@dimen/note_fragment_body_dimen</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="TextAppearance.Notebook.Empty" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/empty_notebook_dimen</item>
        <item name="android:textColor">@color/colorOnPrimary_800</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="Style.TodoFragment.Title" parent="Widget.AppCompat.EditText">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/colorOnPrimary_800</item>
        <item name="android:textColorHint">@color/colorOnPrimary_600</item>
        <item name="android:textSize">@dimen/todo_fragment_title_dimen</item>
        <item name="android:background">@null</item>
    </style>

    <style name="Style.TodoFragment.SubTodo" parent="Widget.AppCompat.EditText">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/colorOnPrimary_800</item>
        <item name="android:textColorHint">@color/colorOnPrimary_600</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@null</item>
    </style>

    <style name="Style.SubTodoFragment.Title" parent="Widget.AppCompat.EditText">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/colorOnPrimary_800</item>
        <item name="android:textColorHint">@color/colorOnPrimary_600</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@null</item>
    </style>

    <style name="TextAppearance.TodoFragment.Settings" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:textColor">@color/colorOnPrimary_600</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.TodoFragment.TodoBody" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:textColor">@color/colorOnPrimary_800</item>
        <item name="android:textColorHint">@color/colorOnPrimary_600</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@null</item>
    </style>

    <style name="TextAppearance.TodoFragment.Todo.Input" parent="TextAppearance.AppCompat">

    </style>

    <style name="TextAppearance.BottomSheet.Sort" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/colorOnPrimary_800</item>
    </style>

    <style name="Style.BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="behavior_skipCollapsed">true</item>
        <item name="behavior_hideable">true</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:navigationBarColor">@color/colorPrimary</item>
    </style>

</resources>
