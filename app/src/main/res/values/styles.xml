<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:statusBarColor">@color/colorBackground</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:navigationBarColor">@color/colorBackground</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="android:colorControlActivated">@color/colorPrimary</item>
        <item name="android:colorControlHighlight">@color/colorSurface</item>
        <item name="android:textColorHighlight">@color/colorSurface</item>
        <item name="android:colorControlNormal">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/colorOnPrimary</item>
        <item name="hintTextColor">@color/colorOnPrimary</item>
        <item name="android:fontFamily">@font/arima_madurai</item>
        <item name="fontFamily">@font/arima_madurai</item>
    </style>

    <style name="AppBarLayout" parent="Widget.MaterialComponents.AppBarLayout.Primary">
        <item name="android:background">@color/colorBackground</item>
        <item name="liftOnScroll">true</item>
        <item name="android:elevation">@dimen/elevation_normal</item>
        <item name="android:animateLayoutChanges">true</item>
    </style>

    <style name="TitleTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/size_huge</item>
        <item name="android:fontFamily">@font/arima_madurai_medium</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="SubtitleTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:gravity">end</item>
        <item name="android:textSize">@dimen/size_tiny</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/arima_madurai_medium</item>
        <item name="android:layout_gravity">end</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/colorBackground</item>
    </style>

    <style name="BaseDialogFragment">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/dialog_shape</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:elevation">@dimen/elevation_extra_large</item>
    </style>

    <style name="DialogTitle" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/arima_madurai_bold</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/size_large</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/spacing_normal</item>
    </style>

    <style name="DialogItem" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/arima_madurai</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/ripple</item>
        <item name="android:padding">@dimen/spacing_normal</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:drawablePadding">@dimen/spacing_normal</item>
    </style>

    <style name="DialogThemeRadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:buttonTint">@color/colorPrimary</item>
        <item name="android:padding">@dimen/spacing_normal</item>
    </style>

    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/colorBackground</item>
        <item name="boxStrokeColor">@color/colorPrimary</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/spacing_small</item>
        <item name="boxCornerRadiusBottomStart">@dimen/spacing_small</item>
        <item name="boxCornerRadiusTopEnd">@dimen/spacing_small</item>
        <item name="boxCornerRadiusTopStart">@dimen/spacing_small</item>
        <item name="errorEnabled">true</item>
        <item name="hintEnabled">true</item>
        <item name="hintAnimationEnabled">true</item>
        <item name="counterTextColor">@color/colorOnPrimary</item>
        <item name="hintTextColor">@color/colorOnPrimary</item>
        <item name="android:textColorHint">@color/colorPrimary</item>
    </style>

    <style name="TextInputEditText">
        <item name="android:padding">@dimen/spacing_normal</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:singleLine">true</item>
        <item name="android:cursorVisible">true</item>
    </style>

    <style name="MaterialButton" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorBackground</item>
        <item name="android:textSize">20sp</item>
        <item name="cornerRadius">@dimen/spacing_small</item>
        <item name="fontFamily">@font/arima_madurai_bold</item>
    </style>

    <style name="MaterialButtonSecondary" parent="MaterialButton">
        <item name="android:backgroundTint">@color/colorSurface</item>
        <item name="android:textColor">@color/colorSecondary</item>
    </style>

    <style name="HorizontalScrollView">
        <item name="android:background">@drawable/shape_dialog_rg</item>
        <item name="android:padding">@dimen/spacing_extra_small</item>
        <item name="android:scrollbars">none</item>
    </style>

    <style name="FAB" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="tint">@color/colorBackground</item>
    </style>

    <style name="LibraryTitleTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/size_small</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="LibraryNotesCountTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="android:textSize">@dimen/size_tiny</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="LibraryCreationDateTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="android:textSize">@dimen/size_tiny</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="TextInputLayout.NotoTitle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxBackgroundMode">none</item>
        <item name="hintEnabled">true</item>
        <item name="hintAnimationEnabled">true</item>
    </style>

    <style name="EditText.NoteTitle" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorSecondary</item>
        <item name="android:fontFamily">@font/arima_madurai_medium</item>
        <item name="android:textColorHint">@color/colorOnSecondary</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="EditText.NoteBody" parent="Widget.AppCompat.EditText">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:fontFamily">@font/arima_madurai</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorSecondary</item>
        <item name="android:lineSpacingMultiplier">1.1</item>
    </style>


    <style name="NoteTitleTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/arima_madurai_medium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorSecondary</item>
        <item name="android:maxLines">3</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="NoteBodyTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/arima_madurai_light</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingMultiplier">1.1</item>
        <item name="android:textColor">@color/colorSecondary</item>
        <item name="android:maxLines">5</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="SplashScreenTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:statusBarColor">@color/colorBackground</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:navigationBarColor">@color/colorBackground</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="android:colorControlActivated">@color/colorPrimary</item>
        <item name="android:colorControlHighlight">@color/colorPrimary</item>
        <item name="android:colorControlNormal">@color/colorPrimary</item>
        <item name="android:textColorHighlight">@color/colorOnPrimary</item>
        <item name="android:textColorHint">@color/colorOnPrimary</item>
        <item name="hintTextColor">@color/colorOnPrimary</item>
    </style>

</resources>
