<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.noto.app">

    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />
    <uses-permission android:name="android.permission.ACCESS_NOTIFICATION_POLICY" />

    <application
        android:name=".NotoApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_futuristic"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_futuristic_round"
        android:supportsRtl="true"
        android:theme="@style/SplashScreen"
        tools:targetApi="m">
        <activity
            android:name=".AppActivity"
            android:windowSoftInputMode="adjustResize"
            android:exported="true">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <intent-filter android:label="@string/save_to_noto">
                <action android:name="android.intent.action.SEND" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="text/*" />
            </intent-filter>

            <intent-filter android:label="@string/save_to_noto">
                <action android:name="android.intent.action.PROCESS_TEXT" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="text/*" />
            </intent-filter>

            <meta-data
                android:name="android.app.shortcuts"
                android:resource="@xml/shortcuts" />

        </activity>

        <activity-alias
            android:name=".Futuristic"
            android:exported="true"
            android:icon="@mipmap/ic_launcher_futuristic"
            android:roundIcon="@mipmap/ic_launcher_futuristic_round"
            android:enabled="false"
            android:targetActivity=".AppActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity-alias>

        <activity-alias
            android:name=".DarkRain"
            android:exported="true"
            android:icon="@mipmap/ic_launcher_dark_rain"
            android:roundIcon="@mipmap/ic_launcher_dark_rain_round"
            android:enabled="false"
            android:targetActivity=".AppActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity-alias>

        <activity-alias
            android:name=".Airplane"
            android:exported="true"
            android:icon="@mipmap/ic_launcher_airplane"
            android:roundIcon="@mipmap/ic_launcher_airplane_round"
            android:enabled="false"
            android:targetActivity=".AppActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity-alias>

        <activity-alias
            android:name=".BlossomIce"
            android:exported="true"
            android:icon="@mipmap/ic_launcher_blossom_ice"
            android:roundIcon="@mipmap/ic_launcher_blossom_ice_round"
            android:enabled="false"
            android:targetActivity=".AppActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity-alias>

        <activity-alias
            android:name=".DarkAlpine"
            android:exported="true"
            android:icon="@mipmap/ic_launcher_dark_alpine"
            android:roundIcon="@mipmap/ic_launcher_dark_alpine_round"
            android:enabled="false"
            android:targetActivity=".AppActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity-alias>

        <activity-alias
            android:name=".DarkSide"
            android:exported="true"
            android:icon="@mipmap/ic_launcher_dark_side"
            android:roundIcon="@mipmap/ic_launcher_dark_side_round"
            android:enabled="false"
            android:targetActivity=".AppActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity-alias>

        <activity-alias
            android:name=".Earth"
            android:exported="true"
            android:icon="@mipmap/ic_launcher_earth"
            android:roundIcon="@mipmap/ic_launcher_earth_round"
            android:enabled="false"
            android:targetActivity=".AppActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity-alias>

        <activity-alias
            android:name=".Fire"
            android:exported="true"
            android:icon="@mipmap/ic_launcher_fire"
            android:roundIcon="@mipmap/ic_launcher_fire_round"
            android:enabled="false"
            android:targetActivity=".AppActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity-alias>

        <activity-alias
            android:name=".Purpleberry"
            android:exported="true"
            android:icon="@mipmap/ic_launcher_purpleberry"
            android:roundIcon="@mipmap/ic_launcher_purpleberry_round"
            android:enabled="false"
            android:targetActivity=".AppActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity-alias>

        <activity-alias
            android:name=".SanguineSun"
            android:exported="true"
            android:icon="@mipmap/ic_launcher_sanguine_sun"
            android:roundIcon="@mipmap/ic_launcher_sanguine_sun_round"
            android:enabled="false"
            android:targetActivity=".AppActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity-alias>

        <activity
            android:name=".widget.FolderListWidgetConfigActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_CONFIGURE" />
            </intent-filter>
        </activity>
        <activity
            android:name=".widget.NoteListWidgetConfigActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_CONFIGURE" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <receiver
            android:name=".receiver.AlarmReceiver"
            android:enabled="true"
            android:exported="false" />

        <receiver
            android:name=".widget.FolderListWidgetProvider"
            android:label="@string/folders"
            android:exported="true">

            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/folder_list_widget_provider" />
        </receiver>

        <service
            android:name=".widget.FolderListWidgetService"
            android:permission="android.permission.BIND_REMOTEVIEWS" />

        <receiver
            android:name=".widget.NoteListWidgetProvider"
            android:label="@string/notes"
            android:exported="true">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/note_list_widget_provider" />
        </receiver>

        <service
            android:name=".widget.NoteListWidgetService"
            android:permission="android.permission.BIND_REMOTEVIEWS" />

        <receiver
            android:name=".receiver.VaultReceiver"
            android:enabled="true"
            android:exported="false" />
    </application>

</manifest>